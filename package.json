{
  "name": "supermarket",
  "version": "0.0.0",
  "engines": {
    "node": "10.16.1",
    "npm": "6.9.0"
  },
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && ng build --prod",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && ng build --prefix client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.2.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "express": "^4.16.4",
    "express-validator": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.9",
    "morgan": "~1.9.1",
    "@angular/cli": "~8.1.1",
    "@angular/compiler-cli": "~8.1.1",
    "typescript": "~3.4.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.19",
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.1"
  }
}
